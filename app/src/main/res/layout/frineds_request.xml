<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_user_parent_request"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/simple_padding_small"
    android:foreground="?attr/selectableItemBackground"
    android:padding="@dimen/simple_padding_large">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/simple_padding_large">

        <ImageView
            android:id="@+id/item_user_image_view_request"
            android:layout_width="?attr/listPreferredItemHeightSmall"
            android:layout_height="?attr/listPreferredItemHeightSmall"
            android:layout_centerVertical="true"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/simple_padding_large"
            android:layout_toEndOf="@id/item_user_image_view_request"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_friend_name_text_view_request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="start"
                android:lines="1"
                android:text="user name"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/text_size_primary"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/item_friend_email_text_view_request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="start"
                android:lines="1"
                android:text="Email"
                android:textColor="@color/colorTextSecondary"
                android:textSize="@dimen/text_size_secondary" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="70dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@id/item_friend_name_text_view_request"
            android:layout_alignParentRight="true"
            tools:ignore="NotSibling">


            <ImageButton
                android:id="@+id/accept_friend_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitCenter"
                android:gravity="end"
                android:src="@drawable/accept_2"


                />
            <ImageButton
                android:id="@+id/reject_friend_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="henno"
                android:scaleType="fitCenter"
                android:src="@drawable/reject_2"
                android:gravity="right"

                />




        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>