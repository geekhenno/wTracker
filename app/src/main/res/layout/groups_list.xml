<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_group_parent_friend"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/simple_padding_small"
    android:foreground="?attr/selectableItemBackground"
    android:padding="@dimen/simple_padding_large">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/simple_padding_large">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_group_image_view"
            android:layout_width="?attr/listPreferredItemHeightSmall"
            android:layout_height="?attr/listPreferredItemHeightSmall"
            android:layout_centerVertical="true"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/simple_padding_large"
            android:layout_toEndOf="@id/item_group_image_view"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_group_name_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="start"
                android:lines="1"
                android:text="group name"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/text_size_primary"
                android:textStyle="bold" />




        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>